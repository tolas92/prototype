[Unit]
After=network-online.target
Description=ros_motor.service
Requires=robot_model_ros.service
After=robot_model_ros.service

[Service]
Environment="RMW_IMPLEMENTATION=rmw_cyclonedds_cpp"
Environment="ROS_DOMAIN_ID=1"
ExecStart=/bin/bash -c 'source /opt/ros/humble/setup.bash; source /home/tolasing/robot_ws/install/setup.bash; ros2 launch prototype motor_launch.py'
RemainAfterExit=no
User=tolasing
Restart=on-failure
RestartSec=2s

[Install]
WantedBy=multi-user.target

<?xml version="1.0"?>

<!--=========================starting xacros================================-->
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="prototype">
<xacro:include filename="$(find prototype)/urdf/wheel.xacro"/>
<xacro:include filename="$(find prototype)/urdf/lidar.xacro"/>
<xacro:include filename="$(find prototype)/urdf/joint_macros.xacro"/>
<xacro:include filename="$(find prototype)/urdf/link_macros.xacro"/>
<xacro:include filename="$(find prototype)/urdf/hardware_interface.xacro"/>
<xacro:include filename="$(find prototype)/urdf/camera.xacro"/>


<!--=========================xacro:properties=============================-->
    <xacro:property name="body_length" value="0.3"/>
    <xacro:property name="body_width" value="0.155"/>
    <xacro:property name="body_height" value="0.01"/>

                              <!-- end of xacros-->
<!--***********************************************************************-->

  <!--=====================Base-Footprint and base_link link=================-->
  <!-- BASE LINK-->
  <link name="base_link">
  </link>

  <joint name="base_footprint_joint" type="fixed">
    <parent link="base_link"/>
    <child link="base_footprint"/>
    <origin xyz="0 0 0" rpy="0 0 0"/>
</joint>

<link name="base_footprint">
</link>


 <joint name="chassis_joint" type="fixed">
  <origin rpy="0 0 0.0" xyz="0 0 0.062"/>
  <parent link="base_link"/>
  <child link="chassis"/>
  <axis xyz="0 0 0"/>
  <joint_proprties damping ="0.0" friction="0.1"/>
 </joint>

<link name="chassis">
    <visual>
        <origin xyz="0 0 0.075" rpy="0.0 0.0 0.0"/>
        <geometry>
        <box size="0.3 0.155 0.15"/>
        </geometry>   
       </visual>
</link>


 <joint name="caster_wheel_joint" type="fixed">
  <parent link="chassis"/>
  <child link="caster_wheel"/>
  <axis xyz="0 0 0"/>
  <origin xyz="0.125 0.0 -0.038" rpy="0 0 0"/>
 </joint>

        <link name="caster_wheel">
            <visual>
                <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
                <geometry>
                 <sphere radius="0.025"/>
                </geometry>
                <material name="blue">
                    <color rgba="0.0 0.0 1.0 1.0"/>
                </material>
            </visual>  
 </link>
</robot>
